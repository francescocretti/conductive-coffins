<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WiFiActivity"
    android:id="@+id/layoutMain"
    android:background="@drawable/background">


    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:tag="tab0"
                    android:background="@drawable/wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    />
                <TextView
                    android:tag="tab1"
                    android:background="@drawable/music"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    />
                <TextView
                    android:tag="tab2"
                    android:background="@drawable/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    />

            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tabcontent0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="24dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_height="wrap_content"
                            android:src="@drawable/logo"
                            android:id="@+id/imageView"

                            android:layout_weight="1"
                            android:layout_margin="20dp"
                            android:paddingTop="30dp"
                            android:layout_width="0dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Not yet connected."
                        android:id="@+id/textStatus"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_marginBottom="20dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <EditText
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="IP Address"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <EditText
                            android:id="@+id/port"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Port"
                            android:layout_weight="0.65" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp">

                        <Button
                            android:id="@+id/connect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Connect"
                            android:onClick="connectButtonPressed"
                            android:layout_weight="0.5" />

                        <Button
                            android:id="@+id/disconnect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Disconnect"
                            android:onClick="disconnectButtonPressed"
                            android:layout_weight="0.40" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabcontent1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="24dp"
                    android:paddingTop="25dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/electronic_music"
                            android:id="@+id/electronic_music"
                            android:layout_weight="0"
                            android:layout_marginRight="10dp" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/keyboard"
                            android:entries="@array/keyboard_ins"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/trumpet"
                            android:id="@+id/trumpet"
                            android:layout_weight="0"
                            android:layout_marginRight="10dp"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/wind"
                            android:entries="@array/wind_ins"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/root"
                            android:id="@+id/root"
                            android:layout_weight="0"
                            android:layout_marginRight="10dp"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/rootNote"
                            android:entries="@array/rootNotes" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/scale"
                            android:id="@+id/scale"
                            android:layout_weight="0"
                            android:layout_marginRight="10dp"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/scaleSpinner"
                            android:entries="@array/scaleType" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <Button
                            android:text="-"
                            android:id="@+id/octaveMinusBtn"
                            android:onClick="octaveButtonMinusPressed"
                            android:textSize="50sp"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textScale"
                            android:textSize="50sp"
                            android:textAlignment="center"
                            android:gravity="center_vertical"
                            android:layout_margin="20dp" />

                        <Button
                            android:id="@+id/octavePlusBtn"
                            android:text="+"
                            android:textSize="50sp"
                            android:onClick="octaveButtonPlusPressed"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabcontent2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="24dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MSG = "
                            android:id="@+id/textView"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/textRX"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Nothing received yet..."
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/credits"
                            android:text="CREATED BY:"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_margin="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/name"
                            android:text="Campo\nCretti\nCrisà\nValido"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </TabHost>

</LinearLayout>